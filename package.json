{
    "private": true,
    "scripts": {
        "dev-all": "concurrently \"npm --section=base run dev\" \"npm --section=main run dev\"  --kill-others-on-fail",
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod-all": "concurrently \"npm --section=base run prod\" \"npm --section=main run prod\"  --kill-others-on-fail",
        "prod": "npm run production",
        "production": "mix --production"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.2.1",
        "alpinejs": "^2.7.3",
        "autoprefixer": "^10.1.0",
        "axios": "^0.21",
        "bootstrap": "^4.6.0",
        "jquery": "^3.6",
        "laravel-mix": "^6.0.6",
        "lodash": "^4.17.19",
        "popper.js": "^1.16.1",
        "postcss": "^8.2.1",
        "postcss-import": "^12.0.1",
        "resolve-url-loader": "^4.0.0",
        "sass": "^1.32.11",
        "sass-loader": "^11.0.1",
        "tailwindcss": "^2.0.2"
    },
    "dependencies": {
        "@fortawesome/fontawesome-free": "^5.15.4",
        "bs-custom-file-input": "^1.3.4",
        "concurrently": "^6.2.1"
    }
}
